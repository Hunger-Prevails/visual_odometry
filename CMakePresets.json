{
    "version": 3,
    "configurePresets": [
        {
            "name": "msvc",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": "C:/DASI/Code/json/build",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_HOST_TRIPLET": "x64-windows",
                "CMAKE_CXX_FLAGS": "/arch:SSE2 /D PCL_SILENCE_MALLOC_WARNING=1"
            }
        },
        {
            "name": "msvc-debug",
            "inherits": "msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "msvc-release",
            "inherits": "msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
